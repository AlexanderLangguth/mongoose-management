{
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "warnOnly": true
      }
    }
  },

  "preset": "ts-jest",
  "testMatch": ["**/*.test.{js,jsx,ts,tsx}"],
  "roots": ["<rootDir>/src/", "<rootDir>/tests/"],

  "clearMocks": true,

  "collectCoverageFrom": ["src/**/*.{ts,tsx,js,jsx}"],
  "coverageReporters": ["text-summary", "html"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 25,
      "functions": 25,
      "lines": 25,
      "statements": 25
    }
  }
}
